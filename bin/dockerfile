FROM alpine:3.20
# Security updates and minimal runtime dependencies
RUN apk --no-cache add ca-certificates tzdata \
    && apk --no-cache upgrade \
    && rm -rf /var/cache/apk/* \
    && adduser -D -g '' -s /bin/sh appuser

COPY --chown=appuser:appuser asmm8 /usr/local/bin/
COPY --chown=appuser:appuser alterx /usr/local/bin/
COPY --chown=appuser:appuser dnsx /usr/local/bin/
COPY --chown=appuser:appuser subfinder /usr/local/bin/

# Security: Switch to non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD asmm8 --help || exit 1

WORKDIR /app

# Expose port (document the port used)
EXPOSE 8000

CMD ["asmm8","launch"]